[include]
	path = ~/.gitconfig.local
[user]
	name = Nils Ratusznik
[push]
	default = simple
[alias]
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%Cred%d%Creset %s %Cgreen(%an %ad)%Creset'
	adog = log --all --decorate --oneline --graph
	co = checkout
	st = status
	ci = commit
	sw = switch
[core]
	editor = vim
	excludesfile = ~/.gitignore
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[delta]
	syntax-theme = Sublime Snazzy
	navigate = true
	line-numbers = true
[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

